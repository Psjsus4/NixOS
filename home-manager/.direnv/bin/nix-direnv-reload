#!/usr/bin/env bash
set -e
if [[ ! -d "/home/darktar/.config/nixos/home-manager" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/darktar/.config/nixos/home-manager")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/darktar/.config/nixos/home-manager" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/darktar/.config/nixos/home-manager/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/darktar/.config/nixos/home-manager/.envrc" "/home/darktar/.config/nixos/home-manager/.direnv"/*.rc
